@using Inance.DTOs.ServiceDTOs
@model IEnumerable<GetServiceDto>

<!-- Begin Page Content -->
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Services</h6>
        </div>
        <div class="d-flex justify-content-end px-3">
            <a class="btn btn-primary mt-3" style="width: 160px" asp-area="Admin" asp-controller="Service" asp-action="Create">+ Add Service</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Active</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (GetServiceDto service in Model)
                        {
                            <tr>
                                <td>@service.Id</td>
                                <td>@service.Title</td>
                                <td>@service.Description</td>
                                <td>@service.IsActive</td>
                                <td>
                                    <a class="btn btn-primary" asp-controller="Service" asp-action="Update" asp-route-id="@service.Id">Edit</a>
                                    <a class="btn btn-info" asp-controller="Service" asp-action="Details" asp-route-id="@service.Id">Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
<!-- Page level plugins -->
<script src="~/admin/vendor/datatables/jquery.dataTables.min.js" defer></script>
<script src="~/admin/vendor/datatables/dataTables.bootstrap4.min.js" defer></script>

<!-- Page level custom scripts -->
<script src="~/admin/js/demo/datatables-demo.js" defer></script>