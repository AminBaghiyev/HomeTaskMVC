@using Inance.DTOs.OrderDTOs
@model IEnumerable<GetOrderDto>

<!-- Begin Page Content -->
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Orders</h6>
        </div>
        <div class="d-flex justify-content-end px-3">
            <a class="btn btn-primary mt-3" style="width: 160px" asp-controller="Order" asp-action="Create">+ Add Order</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Client Fullname</th>
                            <th>Client Phone Number</th>
                            <th>Client E-mail</th>
                            <th>Active</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (GetOrderDto order in Model)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.ClientFullname</td>
                                <td>@order.ClientPhoneNumber</td>
                                <td>@order.ClientEmail</td>
                                <td>@order.IsActive</td>
                                <td>
                                    <a class="btn btn-primary" asp-controller="Order" asp-action="Update" asp-route-id="@order.Id">Edit</a>
                                    <a class="btn btn-info" asp-controller="Order" asp-action="Details" asp-route-id="@order.Id">Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
<!-- Page level plugins -->
<script src="~/admin/vendor/datatables/jquery.dataTables.min.js" defer></script>
<script src="~/admin/vendor/datatables/dataTables.bootstrap4.min.js" defer></script>

<!-- Page level custom scripts -->
<script src="~/admin/js/demo/datatables-demo.js" defer></script>