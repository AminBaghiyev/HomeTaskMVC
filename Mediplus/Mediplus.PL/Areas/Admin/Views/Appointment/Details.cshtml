@model Appointment

<div class="container">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Appointment Details</h6>
        </div>
        <div class="card-body">
            <p>Id: @Model.Id</p>
            <p>Patient Fullname: @Model.Patient.Surname @Model.Patient.Name</p>
            <p>Doctor Fullname: Dr. @Model?.Doctor?.Surname @Model?.Doctor?.Name</p>
            <p>Appointment Date: @Model.AppointmentDate</p>
            <p>Message: @Model.Message</p>
            <p>Is Active?: @Model.IsActive</p>
        </div>
    </div>
</div>