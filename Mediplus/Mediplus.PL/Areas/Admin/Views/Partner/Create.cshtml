@model Partner

<form asp-action=@(Model == null ? "Create" : "Update") class="container" method="POST">
    <h2 class="my-4">@(Model == null ? "Add" : "Update") Partner</h2>
    <div class="mb-3">
        <label class="form-label" asp-for="Title">Title</label>
        <input class="form-control" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Url">Website URL</label>
        <input class="form-control" asp-for="Url" />
        <span class="text-danger" asp-validation-for="Url"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="LogoPath">Logo Path</label>
        <input class="form-control" asp-for="LogoPath" placeholder="client1.jpg" />
        <span class="text-danger" asp-validation-for="LogoPath"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>