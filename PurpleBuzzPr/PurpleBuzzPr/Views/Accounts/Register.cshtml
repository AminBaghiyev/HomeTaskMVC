@model CreateUserDto

<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                        </div>
                        <form class="user" method="post">
                            <div class="form-group row mb-3">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input class="form-control form-control-user" asp-for="FirstName">
                                    <span class="text-danger" asp-validation-for="FirstName"></span>
                                </div>
                                <div class="col-sm-6">
                                    <input class="form-control form-control-user" asp-for="LastName">
                                    <span class="text-danger" asp-validation-for="LastName"></span>
                                </div>
                            </div>
                            <div class="form-group row mb-3">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input class="form-control form-control-user" asp-for="Email">
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control form-control-user" asp-for="Username">
                                    <span class="text-danger" asp-validation-for="Username"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input class="form-control form-control-user" asp-for="Password">
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="col-sm-6">
                                    <input class="form-control form-control-user" asp-for="RepeatedPassword">
                                    <span class="text-danger" asp-validation-for="RepeatedPassword"></span>
                                </div>
                            </div>
                            <button class="btn btn-primary my-0 mx-auto mt-3 btn-user d-block" type="submit">
                                Register Account
                            </button>
                        </form>
                        <hr>
                        <div class="text-center">
                            <a class="small" asp-action="Login">Already have an account? Login!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>