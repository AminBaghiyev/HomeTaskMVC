@model IEnumerable<Work>

<!-- Begin Page Content -->
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Works</h6>
        </div>
        <div class="d-flex justify-content-end px-3">
            <a class="btn btn-primary mt-3" style="width: 160px" asp-area="Admin" asp-controller="Work" asp-action="Create">+ Add Work</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Thumbnail</th>
                            <th>Category</th>
                            <th>Edit</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(Work work in Model)
                        {
                            <tr>
                                <td>@work.Id</td>
                                <td>@work.Title</td>
                                <td>@work.Description</td>
                                <td><img style="width: 60px" src="~/img/@work.ThumbnailPath" alt="@work.Title" /></td>
                                <td>@work.Category</td>
                                <td><a class="btn btn-primary" asp-area="Admin" asp-controller="Work" asp-action="Edit" asp-route-id="@work.Id">Edit</a></td>
                                <td><a class="btn btn-danger" asp-area="Admin" asp-controller="Work" asp-action="Remove" asp-route-id="@work.Id">Remove</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->

<!-- Page level plugins -->
<script src="~/Admin/vendor/datatables/jquery.dataTables.min.js" defer></script>
<script src="~/Admin/vendor/datatables/dataTables.bootstrap4.min.js" defer></script>

<!-- Page level custom scripts -->
<script src="~/Admin/js/demo/datatables-demo.js" defer></script>